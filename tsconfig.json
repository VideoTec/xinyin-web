{
  "compilerOptions": {
    "checkJs": true,
    "target": "es2022",
    "lib": ["es2022", "DOM", "WebWorker"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "strict": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "types": ["vite-plugin-pwa/react", "vite/client"]
  },
  "exclude": ["node_modules", "dist", "src/sqlite"]
}
