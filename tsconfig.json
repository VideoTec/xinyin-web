{
  "compilerOptions": {
    "checkJs": true,
    "target": "es2022",
    "lib": ["es2022", "DOM", "WebWorker"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "strict": false,
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules", "dist"]
}
